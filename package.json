{
  "name": "stoolie",
  "description": "Wrapper around well used logger, winston.",
  "version": "1.0.2",
  "author": "James Teague II <james@teague.dev>",
  "repository": {
    "type": "git",
    "url": "https://github.com/JamesTeague/stoolie.git"
  },
  "dependencies": {
    "logform": "^2.1.2",
    "moment": "^2.24.0",
    "triple-beam": "^1.3.0",
    "winston": "^3.2.1"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "npm run test && npm run build",
    "prettier": "prettier --write 'src/**/*.{js,ts}'",
    "prettier:check": "prettier --check 'src/**/*.{js,ts}'",
    "prerelease": "git checkout master && git pull origin master && npm i && git add .",
    "release": "HUSKY_SKIP_HOOKS=1 standard-version -a --no-verify",
    "postrelease": "run-s release:*",
    "release:tags": "git push --follow-tags origin master",
    "watch": "rollup -cw",
    "test": "jest"
  },
  "keywords": [
    "winston",
    "logger",
    "logging",
    "logs",
    "loglevel",
    "log",
    "bunyan",
    "pino",
    "tools",
    "json",
    "stream",
    "format"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JamesTeague/stoolie/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.34",
    "babel-jest": "^25.2.4",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^3.1.0",
    "jest": "^25.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "1.19.1",
    "rollup": "^1.32.1",
    "rollup-plugin-typescript2": "^0.25.3",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.3.0",
    "ts-loader": "^6.2.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "babel-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write src/**/*.ts && npm test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
