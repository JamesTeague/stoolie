{
  "name": "stoolie",
  "description": "Wrapper around well used logger, winston.",
  "version": "1.0.0",
  "author": "James Teague II <james@teague.dev>",
  "repository": {
    "type": "git",
    "url": "https://github.com/JamesTeague/stoolie.git"
  },
  "dependencies": {
    "logform": "^2.1.2",
    "moment": "^2.24.0",
    "triple-beam": "^1.3.0",
    "winston": "^3.2.1"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "prepublish": "npm run test && npm run build",
    "watch": "rollup -cw",
    "test": "jest"
  },
  "keywords": [
    "winston",
    "logger",
    "logging",
    "logs",
    "loglevel",
    "log",
    "bunyan",
    "pino",
    "tools",
    "json",
    "stream",
    "format"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JamesTeague/stoolie/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-typescript": "^7.7.4",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.17",
    "babel-jest": "^24.9.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "1.19.1",
    "rollup": "^1.27.13",
    "rollup-plugin-typescript2": "^0.25.3",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "babel-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write src/**/*.ts && npm test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
